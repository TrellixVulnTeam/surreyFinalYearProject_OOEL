<% if(messages.info){ %> <% messages.info.forEach(function(message) { %>
  <div class="box">
    <p>Error</p>
    <%= message %>
  </div>
<% }); %> <% } %>  
<div class="hero is-primary">
  <div class="hero-body">
    <p class="title"><%= business.businessName %></p>
    <p class="subtitle"><%= business.address %></p>
    <p class="subtitle">CO2 Average: <%= readingsAverage %></p>
    <!-- if statement to check the quantity of CO2 -->
    <% if (normalizedResult === "c") { %>
      <div>
        <span><p class="subtitle">Current CO2 Amount: </p></span><p style="color: red" class="subtitle">High</p>
      </div>
      
    <% } else if (normalizedResult === "b") { %>
      <div>
        <span><p class="subtitle">Current CO2 Amount: </p></span><p style="color: yellow" class="subtitle">Medium</p>
      </div>

    <% } else if (normalizedResult === "a"){ %>
      <div>
        <span><p class="subtitle">Current CO2 Amount: </p></span><p style="color: green" class="subtitle">Low</p>

    <% } %>
  </div>
</div>
