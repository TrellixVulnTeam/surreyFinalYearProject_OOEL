<head>
  <%- include('../includes/head.ejs') %>
</head>
<body>
  <nav class="navbar is-primary">
    <div class="navbar-brand">
      <a href="/" class="navbar-item">
        <figure class="image is-32x32">
          <img class="is-rounded" src="/images/virus.svg">
        </figure>
        <p class="nav-title">CoviTrack</p>
      </a>
    </div>
  </nav>
  <%- include('../includes/errorMessages.ejs')  %> 
  <section class="hero is-primary is-fullheight">
    <div class="hero-body">
      <div class="container is-fluid">
        <div class="columns is-centered">
          <div class="card">
            <div class="column is-5-tablet is-4-desktop is-3-widescreen">
              <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
              </h1>
              <form action="/users/register" method="POST">
                <div class="field">
                  <label for="name">Name</label>
                  <input
                    type="name"
                    id="name"
                    name="name"
                    class="form-control"
                    placeholder="Enter Name"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                  />
                </div>
                <div class="field">
                  <label for="email">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter Email"
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                  />
                </div>
                <div class="field">
                  <label for="password">Password</label>
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Create Password"
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                  />
                </div>
                <div class="field">
                  <label for="password2">Confirm Password</label>
                  <input
                    type="password"
                    id="password2"
                    name="password2"
                    class="form-control"
                    placeholder="Confirm Password"
                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                  />
                </div>
                <div class="field">
                  <input type="radio" id="businessOwner" name="usertype" value="True">
                  <label for="usertype">Business Owner</label><br>
                  <input type="radio" id="customer" name="usertype" value="False">
                  <label for="usertype">Customer</label><br>
                </div>
                <div class="field is-grouped">
                  <p class="control">
                    <button type="submit" class="button is-info">
                      Register
                    </button>
                  </p>
                  <p class="control">
                    <a class="button is-info" href="/users/login">
                      Login Here
                    </a>
                  </p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
